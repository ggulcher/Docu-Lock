<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.AddJournalFragment">

    <EditText
        android:id="@+id/et_titleJournal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/roboto_mono"
        android:hint="@string/title_of_your_entry"
        android:textColorHint="#646464"
        android:padding="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <Spinner
        android:id="@+id/spin_colorJournal"
        android:popupBackground="#212121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:entries="@array/colors"
        app:layout_constraintTop_toBottomOf="@+id/et_titleJournal"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/et_contentJournal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/custom_input"
        android:gravity="top"
        android:hint="@string/any_notes_thoughts_or_secrets"
        android:textColorHint="#646464"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_colorJournal"
        tools:layout_editor_absoluteX="24dp" />

